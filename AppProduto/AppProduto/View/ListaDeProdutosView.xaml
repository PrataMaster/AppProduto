<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProduto.View.ListaDeProdutosView">
  <StackLayout BackgroundColor="#424242" Padding="0,20,0,0">
  <ListView ItemsSource="{Binding Produtos}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout BackgroundColor="#9E9E9E" Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding Codigo}" TextColor="#000000"/>
              <Label Text="{Binding Nome}" TextColor="#000000"/>
	          <Label Text="{Binding Fabricante}" TextColor="#000000"/>
            </StackLayout>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  </StackLayout>
</ContentPage>